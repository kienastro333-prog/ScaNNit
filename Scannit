<script>
let isSubscribed=false;
let items=[];

function showPage(p){
 document.querySelectorAll('.page').forEach(e=>e.style.display='none');
 if(p==='dashboard'&&!isSubscribed){alert("PRO only");return;}
 document.getElementById(p).style.display='block';
}

function generateQR(){
 let n=ownerName.value;
 let s=ownerSection.value;
 let c=ownerContact.value;
 if(!n||!s){alert("Complete info");return;}
 let data=`Name:${n}\nSection:${s}\nContact:${c}`;
 new QRious({element:qrCanvas,size:250,value:data});
 items.push({n,s,c});
}

function saveQR(){
 let link=document.createElement("a");
 link.download="ScaNNit_QR.png";
 link.href=qrCanvas.toDataURL();
 link.click();
}

function scanQR(){
 let t=scanInput.value.split("\n");
 scanResult.innerHTML=`
 <p><b>${t[0]}</b></p>
 <p>${t[1]}</p>
 <p>${t[2]||''}</p>
 `;
}

function subscribe(){
 isSubscribed=true;
 showPage('dashboard');
 renderDashboard();
}

function renderDashboard(){
 dashboardContent.innerHTML="";
 items.forEach((i,x)=>{
  dashboardContent.innerHTML+=`
   <p><b>Item ${x+1}</b><br>${i.n}<br>${i.s}<br>${i.c||''}</p><hr>`;
 });
}
</script>

